{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "lib": ["es6", "es7", "dom"],
    "jsx": "preserve",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "removeComments": false,
    "types": ["inferno"]
  },
  "include": ["example-ts/shared.tsx"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
